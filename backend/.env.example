# =========================

# FastAPI
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000

# Hugging Face (DO NOT PUT REAL TOKEN)
HF_TOKEN=your_huggingface_token_here

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stt_tts_db
